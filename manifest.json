{
  "manifest_version": 3,
  "name": "Oracle of Tabs",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
	"host_permissions": ["https://*/*"],
  "permissions": [
		"tabs",
		"scripting",
		"sidePanel",
		"storage"
	],
	"background": {
		"service_worker": "service-worker.js"
	  },
	  "action": {
		"default_title": "Click to open panel"
	  }
}
